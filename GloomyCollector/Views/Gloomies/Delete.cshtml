<h1>Delete Gloomies</h1>
<form method="post">
    @foreach(var gloomie in ViewBag.gloomies)
    {
        <div class="form-group">
        <label>
            <span>@gloomie.Name</span>
        <input type="checkbox" name="gloomiesId" value="@gloomie.Id"/>
            </label>
            </div>
    }
    <input type="submit" name="Delete Gloomy Bear" class="btn btn-danger"/>
</form>